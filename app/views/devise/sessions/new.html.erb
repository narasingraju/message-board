<div class>
  <div class="loginpage">
    <h2 class="text-center">Message Board</h2>
    <p class="text-center">Please use your Email to access Message Board</p>
    <span class="form-horizontal col-md-5 col-md-offset-3 col-sm-7 col-sm-offset-2" role="form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_Cwid">Email:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_email" name="user[email]" placeholder="Enter Email" type="text"></input>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Password:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_password" name="user[password]" placeholder="Enter password" type="password"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button class="btn btn-sm btn-info" name="commit" type="submit">Login</button>
          </div>
        </div>
      <% end %>
      <div class="form-group">
      </div>
      <p class="medium text-danger col-sm-offset-4 col-md-8">New user? <%= link_to "Sign up", new_user_registration_path, :class=>"btn btn-sm btn-info"%></p>
    </span>
    <div class="clearfix"></div>
    <div class="col-md-8 col-md-offset-2 text-center">
    </div>
  </div>
</div>
<%#= link_to "Create Post", new_post_path, :class=>"btn btn-primary create-btn"%>