

<div class="wrapper">
  <!-- start of .loginpane
  -->
  <div>
    <h2 class="text-center">Message Board</h2>
    <h3 class="text-center">Edit your profile</h3>
    <span class="form-horizontal col-md-5 col-md-offset-3 col-sm-7 col-sm-offset-2" role="form">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
     <%= devise_error_messages! %>

        <div class="form-group">
          <label class="control-label col-sm-4" for="user_Cwid">Name:</label>
          <div class="col-sm-8">
            <%= f.text_field :name, autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-4" for="user_Cwid">Email:</label>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Password:</label>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Password confirmation:</label>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Current password:</label>
          <div class="col-sm-8">
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_avatar">Upload:</label>
          <div class="col-sm-8">
            <%= f.file_field :avatar, class: 'custom-file-input' %><br/>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button class="btn btn-sm btn-info" name="commit" type="submit">Update</button>
          </div>
        </div>
      <% end %>
    </span>
    <div class="clearfix"></div>
    <div class="col-md-8 col-md-offset-2 text-center">
    </div>
  </div>
</div>
