<div class="wrapper">
  <div class="userregistration">
    <h2 class="text-center">Message Board</h2>
    <p class="text-center">Please Sign Up to access Message Board</p>
    <span class="form-horizontal col-md-5 col-md-offset-3 col-sm-7 col-sm-offset-2" role="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_Cwid">Name:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_name" name="user[name]" placeholder="Enter your name" type="text"></input>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_Cwid">Email:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_email" name="user[email]" placeholder="Enter Email" type="text"></input>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Password:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_password" name="user[password]" placeholder="Enter password" type="password"></input>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_password">Password confirmation:</label>
          <div class="col-sm-8">
            <input class="form-control" id="user_password_confirmation" name="user[password_confirmation]" placeholder="Confirm your password" type="password"></input>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="user_avatar">Upload:</label>
          <div class="col-sm-8">
            <%= f.file_field :avatar, class: 'custom-file-input' %><br/>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button class="btn btn-sm btn-info" name="commit" type="submit">Sign Up</button>
            <%= link_to "Home", welcome_index_path, class: "search-btn btn btn-sm btn-success"%>
            <%#= link_to "Login", new_user_session_path, class: "search-btn btn btn-sm btn-info"%>
          </div>
        </div>
      <% end %>
    </span>
    <div class="clearfix"></div>
    <div class="col-md-8 col-md-offset-2 text-center">
    </div>
  </div>
</div>
